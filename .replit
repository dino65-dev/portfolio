modules = ["nodejs-20", "bash", "web", "python-3.11"]
[agent]
expertMode = true
integrations = ["replitmail:1.0.0", "javascript_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "freetype", "geckodriver", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Portfolio Dev Server"

[[workflows.workflow]]
name = "Portfolio Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd portfolio && npx tsx server/index.ts"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm"]
build = ["npm", "run", "build"]
